{
  "$schema": "https://schemas.wordpress.org/trunk/block.json",
  "apiVersion": 3,
  "name": "soltani/hero",
  "title": "Hero",
  "category": "design",
  "icon": "cover-image",
  "description": "A custom hero section for the top of the page.",

  "attributes": {
    "title": {
      "type": "string",
      "source": "text",
      "selector": "h1"
    },
    "subtitle": {
      "type": "string",
      "source": "text",
      "selector": "p"
    },
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "imageId": {
      "type": "number"
    }
  },

  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
